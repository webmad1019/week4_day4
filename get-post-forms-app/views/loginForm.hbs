<div class="container">

  <h1>Inicio de sesión</h1>

  <div class="row justify-content-center">

    <div class="col-md-8">

      <form action="/login" method="POST">
        <div class="form-group">
          <label for="field1">Usuario</label>
          <input type="text" class="form-control" id="field1" name="nameInput" required>
        </div>
        <div class="form-group">
          <label for="field2">Contraseña</label>
          <input type="password" class="form-control" id="field2" name="passwordInput" required>
        </div>

        <button type="submit" class="btn btn-dark">Iniciar sesión</button>
      </form>

    </div>
  </div>
</div>